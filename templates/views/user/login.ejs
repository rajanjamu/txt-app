    <div class="ui fourteen wide mobile column segment">
        <div class="ui huge header center aligned">Login</div>
        <form action="#" class="ui large form">
            <div class="field">
                <label for="">Username</label>
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input class="teal" type="text" name="username" placeholder="Username">
